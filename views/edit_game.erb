<div class="container">
    <div class="row mb-3">
        <h1>Edit Game</h1>
    </div>
    <form action="/edit_game?id=<%= @game.id %>" method="post" enctype="application/x-www-form-urlencoded">
        <div class="mb-3 row">
            <div class="col">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="cancel" value="on" name="cancel" <% if not @game.status %>checked<%end%>>
                    <label class="form-check-label" for="cancel">
                        Mark as canceled?
                    </label>
                </div>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="name" class="form-label">Name: </label>
            </div>
            <div class="col-md-10">   
                <input type="text" class="form-control" id="name" name="name" value="<%= @game.name %>">
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="datepicker" class="form-label">Date: </label>
            </div>
            <div class="col-md-6">
                <input id="datepicker" name="date" class="form-control" type="datetime-local" value="<%= @game.date.strftime('%Y-%m-%d' + 'T' + '%H:%M')%>">
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="advantage" class="form-label">Advantage (if applicable): </label>
            </div>
            <div class="col-md-4">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="advantage" id="home" value="<%= true %>" <%if @game.advantage%> checked <% end %>>
                    <label class="form-check-label" for="home">Home</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="advantage" id="away" value="<%= false %>" <%if not @game.advantage%> checked <% end %>>
                    <label class="form-check-label" for="away">Away</label>
                </div>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="blue_pts" class="form-label">Points (if applicable):</label>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text" id="hscore">Home</span>
                    <input type="number" class="form-control" min="0" value="<%= @game.home_score.to_i %>"
                            aria-label="pts" aria-describedby="home_pts" id="hscore" name="hscore"> 
                </div>
            </div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text" id="ascore">Opponent</span>
                    <input type="number" class="form-control" min="0" value="<%= @game.away_score.to_i %>"
                            aria-label="pts" aria-describedby="white_pts" id="ascore" name="ascore"> 
                </div>
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="result" class="form-label">Result (if applicable): </label>
            </div>
            <div class="col-md-3">   
                <input type="text" class="form-control" id="result" name="result" value="<%= @game.result %>">
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="details" class="form-label">Details (if applicable): </label>
            </div>
            <div class="col-md-10">   
                <input type="text" class="form-control" id="details" name="details" value="<%= @game.details%>">
            </div>
        </div>
        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary mb-3 me-3">Submit</button>
            <a href="javascript:history.back()" class="btn btn-secondary mb-3">Cancel</a>            
        </div>
    </form>
    <form action="/delete_game?id=<%= @game.id %>" method="post">
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-danger"  onclick="return confirm('Are you sure you want to delete this game?');">Delete</button>
        </div>    
    </form>
    
</div>
