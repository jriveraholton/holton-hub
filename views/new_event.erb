<div class="container">
	<h1>Add a New Event</h1>
	<form action="/create_event" method="post" enctype="application/x-www-form-urlencoded">
		<div class="mb-3 row">
			<div class="col-md-2">
				<label for="eventName" class="form-label">Event name</label>
			</div>
			<div class="col-md-10">   
				<input type="text" class="form-control <% if @active_team_color == 'white'%>white-user<% else %>blue-user<% end %>" id="eventName" name="eventName" placeholder="Field Day, Spirit Stick, etc." required>
			</div>
		</div>
		<div class="mb-3 row">
			<div class="col-md-2">
				<label for="datepicker" class="form-label">Date: </label>
			</div>
			<div class="col-md-6">
				<input id="datepicker" name="date" class="form-control" type="date" required>
			</div>
		</div>
		<div class="mb-3 row">
			<div class="col-md-2">
				<label for="division" class="form-label">Participating Division: </label>
			</div>
			<div class="col-md-4">
				<select id="division" name="division" class="form-select" aria-label="Divison select" required>
					<option selected disabled value>Select</option>
					<option value="All School">All School</option>
					<option value="Upper School">Upper School</option>
					<option value="Middle School">Middle School</option>
					<option value="Lower School">Lower School</option>
				</select>
			</div>
		</div>
		<div class="mb-3 row">
			<div class="col-md-2">
				<label for="blue_pts" class="form-label">Points Awarded</label>
			</div>
			<div class="col-md-4">
				<div class="input-group">
					<span class="input-group-text <% if @active_team_color == 'white'%>white-user<% else %>blue-user<% end %>" id="blue_pts">Blue Team</span>
					<input type="number" class="form-control <% if @active_team_color == 'white'%>white-user<% else %>blue-user<% end %>" placeholder="e.g. 3"  min="0"
								 aria-label="pts" aria-describedby="blue_pts" id="blue_pts" name="blue_pts" required> 
				</div>
			</div>
			<div class="col-md-4">
				<div class="input-group">
					<span class="input-group-text <% if @active_team_color == 'white'%>white-user<% else %>blue-user<% end %>" id="blue_pts">White Team</span>
					<input type="number" class="form-control <% if @active_team_color == 'white'%>white-user<% else %>blue-user<% end %>" placeholder="e.g. 0"  min="0"
								 aria-label="pts" aria-describedby="white_pts" id="white_pts" name="white_pts" required> 
				</div>
			</div>
		</div>
		<div class="d-grid gap-2 d-md-block">
			<button type="submit" class="btn btn-primary mb-3 me-3">Submit</button>
			<a href="/bw_events" class="btn btn-secondary mb-3">Cancel</a>            
		</div>
	</form>
</div>

