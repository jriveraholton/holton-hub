<div class="container">
    <div class="row mb-3">
        <h1>Edit <%= Group.find_by(id: @meeting.group_id).name.titleize %> Meeting</h1>
    </div>
    <form action="/update_meeting?id=<%= @meeting.id %>" method="post" enctype="application/x-www-form-urlencoded">
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="location" class="form-label">Location: </label>
            </div>
            <div class="col-md-10">   
                <input type="text" class="form-control" id="location" name="location" value="<%= @meeting.location %>">
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="datepicker" class="form-label">Date: </label>
            </div>
            <div class="col-md-6">
                <input id="datepicker" name="date" class="form-control" type="datetime-local" value="<%= @meeting.event_date.strftime('%Y-%m-%d' + 'T' + '%H:%M')%>">
            </div>
        </div>
        <div class="mb-3 row">
            <div class="col-md-2">
                <label for="desc" class="form-label">Description (opt): </label>
            </div>
            <div class="col-md-10">   
                <input type="text" class="form-control" id="desc" name="desc" value="<%= @meeting.description%>">
            </div>
        </div>
        <div class="d-grid gap-2 d-md-block">
            <button type="submit" class="btn btn-primary mb-3 me-3">Submit</button>
            <a href="javascript:history.back()" class="btn btn-secondary mb-3">Cancel</a>            
        </div>
    </form>
    <form action="/delete_meeting?id=<%= @meeting.id %>" method="post">
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-danger"  onclick="return confirm('Are you sure you want to delete this meeting?');">Delete</button>
        </div>    
    </form>
    
</div>
