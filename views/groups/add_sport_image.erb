<div class="container">
    <div class="row">
        <h1>Add Image for <%=@current_group.name.titleize %> </h1>
    </div>
    
    <div class="row">
        <form action="/upload_sport_image?id=<%=@current_group.id %>" method="post" enctype="multipart/form-data">
            <div class="col">
            <label for="imageUpload">Upload an image:</label> 
            <input type="file" id="imageUpload" name="imageUpload" accept="image/*" required> 
            
            <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>
