<div class="container" id="all_sports">
    <div class="row text-center mb-3">
        <h1>All Sports</h1>
    </div>
    <% if @active_user.is_admin %>
        <div class="row justify-content-md-center text-center mb-3">
            <div class="col">
                <div class="btn-group" role="group" aria-lable="Sports Management">
                <a href="/manage/manage_groups" class="btn btn-primary" role="button">Manage Sports</a>    
                <a class="btn btn-primary" href="/add_group">Add New Sport</a>
                </div>
            </div>
        </div>
    <% end %>
    <div class="row">
    <hr>
    <h2>Fall Sports</h2>
    <% @fall_sports.each do |sport| %>
        <div class="col-md-3 mb-3">
            <div class="card border-primary">
            <img src="<%= '/sports/' + sport.name.gsub(' ', '_') + '.jpg' %>" alt="<%=sport.name.titleize%> photo" 
            class="card-img"
            onerror="this.onerror=null;this.src='/sports/placeholder.jpg';">
                <div class="card-body" id="sport-body">
                    <h5 class="card-title" id="sport-name"> <%=sport.name.titleize %> </h5>
                    <hr>
                    <p class="card-text">
                        <div style="float: left; width: 50%;"><%= Season.find((GroupSeason.find_by(group_id: sport.id).season_id)).name %></div>
                        <div style="float: right; width: 50%; text-align: right;"><i><%= GroupLevel.find(sport.level_id).name.titleize %></i></div>
                        <!-- finds season via group-season relation table-->
                    </p>
                
                    <a href="/all_sports/<%= sport.name.sub(" ", "_")%>" class="btn btn-primary card-link mt-3 justify-content-md-center" role="button">See record</a>
                </div>
            </div>
        </div>
    <% end %>
    </div> 
